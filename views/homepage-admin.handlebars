{{>nav-component}}
<h1>Welcome to the Homepage</h1>

<h2>Logged In: {{isLoggedIn}}</h2>

{{#each posts as |post|}}

    <a href="/edit-post/{{post.id}}">
    {{#if isLoggedIn}}
      <div id="blog-post-id">
        <h2>{{post.title}}</h2>
        <p>{{post.post_content}}</p>
      </div>
    </a>
  {{else}}
    <div id="blog-post-id">
      <h2>{{post.title}}</h2>
      <p>{{post.post_content}}</p>
    </div>
  {{/if}}
{{/each}}
