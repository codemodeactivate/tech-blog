<!-- Dashboard -->

<form action="/new-post" method="POST">
    <input type="text" name="title" placeholder="Title" required>
    <textarea name="post_content" placeholder="Body" required></textarea>
    <button type="submit">New Post</button>
</form>

{{#each posts}}
  <div>
    <h2>{{title}}</h2>
    <p>{{post_content}}</p>
  </div>
{{/each}}
