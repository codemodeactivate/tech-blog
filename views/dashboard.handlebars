{{>nav-component}}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-0">ADMIN Dashboard</h1>
        <a href="/new-post" alt="new post" class="btn btn-primary">New Post</a>
    </div>
    <div id="post-container">
    {{#each posts as |post|}}
    <div id="post-{{post.id}}" class="card mt-3">
        <div class="card-body">
            <h2 class="card-title editable">{{post.title}}</h2>
            <p class="card-text editable">{{post.post_content}}</p>
            <button class="btn btn-warning edit" data-id="{{post.id}}">Edit</button>
            <button class="btn btn-danger delete" data-id="{{post.id}}">Delete</button>
        </div>
    </div>
    {{/each}}
</div>
</div>
{{>new-post-component}}
<script defer src="/js/admin.js" defer></script>
